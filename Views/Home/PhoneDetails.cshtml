@model E_Shop.Models.Phone

<div class="main">
    <div class="phone-description p-4">
        <img src="@Model.Photos" alt="Image not found" onerror="this.onerror = null;this.src = '/img/unnamed.png';" class="phone-img" />
        <div class="phone-description-body">
            <div>
                <h3>
                    @Model.Name
                </h3>
                <div style="text-align: end">
                    <a asp-action="Upsert" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="16"
                             height="16"
                             fill="currentColor"
                             class="bi bi-pencil-fill"
                             viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                        </svg>
                    </a>
                    <form style="display: inline;" method="post">
                        <button asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 width="16"
                                 height="16"
                                 fill="currentColor"
                                 class="bi bi-trash-fill"
                                 viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                      d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z" />
                            </svg>
                        </button>
                    </form>
                </div>
            </div>
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">Manufacturer</th>
                        <td>@Model.Manufacturer</td>
                    </tr>
                    <tr>
                        <th scope="row">Size</th>
                        <td>@Model.Size</td>
                    </tr>
                    <tr>
                        <th scope="row">Weight</th>
                        <td>@Model.Weight kg</td>
                    </tr>
                    <tr>
                        <th scope="row">Display Size</th>
                        <td>@Model.DisplaySize inches</td>
                    </tr>
                    <tr>
                        <th scope="row">Processor</th>
                        <td>@Model.Processor</td>
                    </tr>
                    <tr>
                        <th scope="row">Memory</th>
                        <td>@Model.Memory GB</td>
                    </tr>
                    <tr>
                        <th scope="row">Operating System</th>
                        <td>@Model.OperatingSystem</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="price p-3">
        <h3>@Model.Price ₾</h3>
        <button type="button" class="btn btn-danger btn-lg">Buy Now</button>
    </div>
</div>
